@model ProjectBlogMvc.Models.DATA.Entities.Article

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
   
    List<CheckBoxTopicModel> checboxItems = ViewBag.CheckBoxItems;

}

<div class="container container-fluid">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1>Düzenle...</h1>
            <hr />
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                @*<div class="form-group d-none">
            <label asp-for="UserID" class="control-label"></label>
            <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>*@
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group container">
                    <div class="row">

                        @foreach (var item in checboxItems)
                        {
                            <div class="col-4">

                                <input type="checkbox" name="checboxItems" value="@item.ID" />
                                <label>@item.Name</label>
                            </div>
                        }
                    </div>

                </div>
                <div class="form-group ">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group d-none">
                    <label asp-for="Picture" class="control-label"></label>
                    <input asp-for="Picture" class="form-control" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="file" name="img" class="form-control" />
                    <label class="control-label">Resim Seç</label>
                </div>
                <div class="form-group d-none">
                    <label asp-for="ReadingTime" class="control-label"></label>
                    <input asp-for="ReadingTime" class="form-control" />
                    <span asp-validation-for="ReadingTime" class="text-danger"></span>
                </div>
                <div class="form-group d-none">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group d-none">
                    <label asp-for="HitRate" class="control-label"></label>
                    <input asp-for="HitRate" class="form-control" />
                    <span asp-validation-for="HitRate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>