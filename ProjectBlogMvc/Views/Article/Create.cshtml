@model ProjectBlogMvc.Models.DATA.Entities.Article
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    //var topicList = ViewBag.Topics as IEnumerable<ProjectBlogMvc.Models.DATA.Entities.Topic>;

    List<CheckBoxTopicModel> checboxItems = ViewBag.CheckBoxItems;

}
<div class="container  mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1>Aklındakileri yazmaya başla...</h1>
            <hr />
            <form enctype="multipart/form-data" asp-controller="Article" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-none">
                    <label asp-for="@Model.UserID" class="control-label"></label>
                    <input asp-for="@Model.UserID" value="@ViewBag.GetUserID" class="form-control" />
                    <span asp-validation-for="@Model.UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title" class="control-label"></label>
                    <input asp-for="@Model.Title" class="form-control" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description" class="control-label"></label>
                    <input asp-for="@Model.Description" class="form-control" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group container">
                    <div class="row">

                        @foreach (var item in checboxItems)
                        {
                            <div class="col-4">

                                <input type="checkbox" name="checboxItems" value="@item.ID" />
                                <label>@item.Name</label>
                            </div>
                        }
                    </div>

                </div>
                <div class="form-group">
                    <input type="file" name="img" class="form-control" />
                    <label class="control-label">Resim Seç</label>
                    @*<div class="input-group-append form-group">
                                                 <button class="btn btn-outline-dark btn-send-mail" type="submit" value="Create" id="inputGroupFileAddon04">Resmi Yükle</button>
                        </div>*@
                </div>
                <div class="form-group ">
                    <label asp-for="@Model.Content" class="control-label"></label>
                    <textarea asp-for="@Model.Content" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                @*<div class="input-group">
                        <div class="custom-file">
                            <input asp-for="@Model.Picture" type="file" class="form-control custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" />
                            <label asp-for="@Model.Picture" class="custom-file-label control-label" for="inputGroupFile04">Resim Seç</label>
                        </div>
                        <div class="input-group-append form-group">
                            <button class="btn btn-outline-dark btn-send-mail" type="submit" id="inputGroupFileAddon04">Resmi Yükle</button>
                        </div>
                    </div>*@
                <hr class="display-4" />
                @*<div class="form-group d-none">
                        <label asp-for="@Model.ReleaseDate" class="control-label"></label>
                        <input asp-for="@Model.ReleaseDate" class="form-control" value="@DateTime.Now"  />
                        <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
                    </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-dark btn-send-mail" id="inputGroupFileAddon04" />
                </div>
            </form>
        </div>
    </div>
</div>
