@model ProjectBlogMvc.Models.DATA.Entities.Article

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-5">
    <h1>Detay</h1>

    <div>
        <h4>Makale</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.Raw(Html.DisplayNameFor(model => model.Content));
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Html.DisplayNameFor(model => model.Content));
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Picture)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Picture)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReadingTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReadingTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HitRate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HitRate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">Sil</a>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">Düzenle</a>
    </div>
</div>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Makaleyi silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                           <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-primary">Evet</a>
                <a class="btn btn-secondary" data-dismiss="modal">Kapat</a>
            </div>
        </div>
    </div>
</div>