@model Tuple<Article, User, List<Topic>, List<Article>, List<ArticlesTopics>>
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    List<Topic> relatedTopics = new List<Topic>();

    foreach (var item in Model.Item5.Where(x => x.ArticleID == Model.Item1.ID).ToList())
    {
        Topic topics = Model.Item3.AsQueryable().Where(x => x.ID == item.TopicID).FirstOrDefault();
        relatedTopics.Add(topics);
    }

}
